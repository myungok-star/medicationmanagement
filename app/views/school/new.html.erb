<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1>Add a new school</h1>
    </div>
  </div>
</div>
<div class="container">
    <div class="row">
        <%= form_for :school, url: '/schools', html: { multipart: true, class: "col s12 m6 offset-m3"} do |f| %>
        <%= f.text_field :name, required: true, class: "input-field col s12", placeholder: "Name goes here" %>
        <%= f.submit 'Add', class: 'btn waves-effect waves-light col s3' %>
        <% end %>
    </div>
</div>
